# Kong API Gateway Environment Variables
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=development
KONG_ENV=development

# Database Configuration (DB-less mode)
KONG_DATABASE=off
KONG_DECLARATIVE_CONFIG=/kong/declarative/kong.yml

# Kong Admin API
KONG_ADMIN_LISTEN=0.0.0.0:8001
KONG_ADMIN_ACCESS_LOG=/dev/stdout
KONG_ADMIN_ERROR_LOG=/dev/stderr
KONG_ADMIN_GUI_LISTEN=0.0.0.0:8002

# Kong Proxy
KONG_PROXY_LISTEN=0.0.0.0:8000, 0.0.0.0:8443 ssl
KONG_PROXY_ACCESS_LOG=/dev/stdout
KONG_PROXY_ERROR_LOG=/dev/stderr

# SSL Configuration
KONG_SSL_CERT_PATH=/kong/ssl/kong.crt
KONG_SSL_CERT_KEY_PATH=/kong/ssl/kong.key

# Logging
KONG_LOG_LEVEL=info
KONG_ACCESS_LOG=/dev/stdout
KONG_ERROR_LOG=/dev/stderr

# Security
KONG_REAL_IP_HEADER=X-Real-IP
KONG_REAL_IP_RECURSIVE=on
KONG_TRUSTED_IPS=0.0.0.0/0,::/0

# Redis Configuration for Rate Limiting
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=inergize_redis_password
REDIS_DATABASE=0
REDIS_SSL=false

# Elasticsearch for Logging
ELASTICSEARCH_HOST=elasticsearch
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_TOKEN=your_elasticsearch_token_here

# Authentication Tokens
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
HEALTH_CHECK_TOKEN=your-health-check-token-change-in-production

# API Keys (Generate strong keys for production)
WEB_APP_API_KEY=dev-web-api-key-12345
MOBILE_APP_API_KEY=dev-mobile-api-key-12345
ADMIN_API_KEY=dev-admin-api-key-12345

# JWT Secrets for Consumers
WEB_APP_JWT_SECRET=your-web-app-jwt-secret-change-in-production
MOBILE_APP_JWT_SECRET=your-mobile-app-jwt-secret-change-in-production
ADMIN_JWT_SECRET=your-admin-jwt-secret-change-in-production

# Monitoring
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=false
ZIPKIN_ENABLED=false

# Production-specific variables (only needed in production)
# PROD_SSL_CERT=
# PROD_SSL_KEY=
# PROD_CA_CERT=
# PROD_WEB_API_KEY=
# PROD_MOBILE_API_KEY=
# PROD_ADMIN_API_KEY=
# PROD_WEB_JWT_PUBLIC_KEY=
# PROD_MOBILE_JWT_PUBLIC_KEY=
# PROD_ADMIN_JWT_PUBLIC_KEY=
# COMPLIANCE_LOG_TOKEN=
# AUDIT_LOG_TOKEN=

# LinkedIn Compliance Settings
LINKEDIN_RATE_LIMIT_ENABLED=true
LINKEDIN_RATE_LIMIT_MINUTE=5
LINKEDIN_RATE_LIMIT_HOUR=100
LINKEDIN_RATE_LIMIT_DAY=1000

# Circuit Breaker Settings
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=50
CIRCUIT_BREAKER_TIMEOUT=30

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=300
CACHE_STRATEGY=memory

# Security Settings
BOT_DETECTION_ENABLED=true
IP_RESTRICTION_ENABLED=false
REQUEST_SIZE_LIMIT=10
WAF_ENABLED=false