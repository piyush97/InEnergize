# InErgize Environment Configuration
# Copy this file to .env and fill in your values

# =================================
# DATABASE CONFIGURATION
# =================================

# Main PostgreSQL Database
DATABASE_URL="postgresql://inergize_user:your_password_here@localhost:5432/inergize_dev"

# TimescaleDB for Analytics
ANALYTICS_DATABASE_URL="postgresql://inergize_user:your_password_here@localhost:5433/inergize_analytics"

# Redis Cache
REDIS_URL="redis://:your_redis_password@localhost:6379"

# =================================
# AUTHENTICATION & SECURITY
# =================================

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-min-32-chars-change-in-production"
JWT_EXPIRES_IN="24h"
JWT_REFRESH_EXPIRES_IN="7d"

# NextAuth Configuration (for web app)
NEXTAUTH_SECRET="your-nextauth-secret-min-32-chars-change-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# Session Configuration
SESSION_SECRET="your-session-secret-min-32-chars-change-in-production"
SESSION_MAX_AGE=86400000

# =================================
# LINKEDIN API CONFIGURATION
# =================================

# LinkedIn OAuth App Credentials (Get from https://developer.linkedin.com/)
LINKEDIN_CLIENT_ID="your_linkedin_client_id"
LINKEDIN_CLIENT_SECRET="your_linkedin_client_secret"
LINKEDIN_REDIRECT_URI="http://localhost:3000/auth/linkedin/callback"

# LinkedIn API Configuration
LINKEDIN_API_BASE_URL="https://api.linkedin.com/v2"
LINKEDIN_API_VERSION="v2"
LINKEDIN_SCOPE="r_liteprofile r_emailaddress"

# LinkedIn Compliance Rate Limiting (Conservative for TOS Compliance)
LINKEDIN_REQUESTS_PER_MINUTE=5
LINKEDIN_REQUESTS_PER_HOUR=50
LINKEDIN_REQUESTS_PER_DAY=500
LINKEDIN_BURST_LIMIT=10

# LinkedIn Compliance & Safety Features
LINKEDIN_ENABLE_RATE_LIMITING=true
LINKEDIN_ENABLE_REQUEST_LOGGING=true
LINKEDIN_ENABLE_COMPLIANCE_MONITORING=true
LINKEDIN_SAFE_MODE=true
LINKEDIN_ENABLE_CIRCUIT_BREAKER=true

# LinkedIn Request Timing (Human-like behavior)
LINKEDIN_MIN_REQUEST_DELAY=2000
LINKEDIN_MAX_REQUEST_DELAY=5000
LINKEDIN_ENABLE_JITTER=true

# LinkedIn Token Management
LINKEDIN_ENABLE_STATE_VALIDATION=true
LINKEDIN_STATE_TTL=600
LINKEDIN_ENABLE_PKCE=false

# =================================
# AI SERVICES CONFIGURATION
# =================================

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# DALL-E Configuration (for image generation)
DALLE_API_KEY="sk-your-openai-api-key-here"
DALLE_MODEL="dall-e-3"
DALLE_SIZE="1024x1024"
DALLE_QUALITY="standard"

# =================================
# EMAIL SERVICES
# =================================

# SendGrid Configuration
SENDGRID_API_KEY="SG.your-sendgrid-api-key-here"
SENDGRID_FROM_EMAIL="noreply@inergize.com"
SENDGRID_FROM_NAME="InErgize Platform"

# Email Templates
EMAIL_VERIFICATION_TEMPLATE_ID="d-your-template-id"
PASSWORD_RESET_TEMPLATE_ID="d-your-template-id"
WELCOME_EMAIL_TEMPLATE_ID="d-your-template-id"

# =================================
# FILE STORAGE
# =================================

# AWS S3 Configuration
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-west-2"
AWS_S3_BUCKET="inergize-media-dev"
AWS_S3_PUBLIC_BUCKET="inergize-public-dev"

# CloudFront CDN (optional)
AWS_CLOUDFRONT_DOMAIN="your-cloudfront-domain.cloudfront.net"

# =================================
# SEARCH & ANALYTICS
# =================================

# Elasticsearch Configuration
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_INDEX_PREFIX="inergize_dev"
ELASTICSEARCH_USERNAME=""
ELASTICSEARCH_PASSWORD=""

# Analytics Configuration
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
MIXPANEL_TOKEN="your-mixpanel-token"

# =================================
# EXTERNAL SERVICES
# =================================

# Stripe Configuration (for payments)
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Webhook URLs
STRIPE_SUCCESS_URL="http://localhost:3000/payment/success"
STRIPE_CANCEL_URL="http://localhost:3000/payment/cancel"

# Slack Integration (for notifications)
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
SLACK_CHANNEL="#alerts"

# =================================
# MONITORING & OBSERVABILITY
# =================================

# Application Monitoring
NEW_RELIC_LICENSE_KEY="your-new-relic-license-key"
SENTRY_DSN="your-sentry-dsn-here"

# Logging Configuration
LOG_LEVEL="debug"
LOG_FORMAT="json"
LOG_FILE_PATH="./logs/app.log"
LOG_MAX_SIZE="10MB"
LOG_MAX_FILES=5

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# =================================
# API GATEWAY & SERVICE MESH
# =================================

# Kong API Gateway
KONG_ADMIN_URL="http://localhost:8001"
KONG_PROXY_URL="http://localhost:8000"

# Service Discovery
CONSUL_URL="http://localhost:8500"
SERVICE_DISCOVERY_ENABLED=false

# =================================
# RATE LIMITING & SECURITY
# =================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# CORS Configuration
CORS_ORIGIN="http://localhost:3000,http://localhost:3001"
CORS_CREDENTIALS=true

# Security Headers
HELMET_ENABLED=true
CSP_ENABLED=true

# =================================
# CACHING
# =================================

# Cache Configuration
CACHE_TTL_DEFAULT=3600
CACHE_TTL_AUTH=1800
CACHE_TTL_CONTENT=7200
CACHE_TTL_ANALYTICS=300

# =================================
# FEATURE FLAGS
# =================================

# Development Features
FEATURE_AI_CONTENT_GENERATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AUTOMATION_RULES=true
FEATURE_BULK_OPERATIONS=false

# Debug Features
DEBUG_ENABLED=true
DEBUG_SQL_LOGGING=false
DEBUG_API_REQUESTS=false

# =================================
# APPLICATION CONFIGURATION
# =================================

# Server Configuration
NODE_ENV="development"
PORT=3000
HOST="0.0.0.0"

# API Configuration
API_VERSION="v1"
API_PREFIX="/api"
API_TIMEOUT=30000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# File Upload Limits
MAX_FILE_SIZE="10MB"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,video/mp4,application/pdf"

# =================================
# MICROSERVICES CONFIGURATION
# =================================

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL="http://localhost:3001"
USER_SERVICE_URL="http://localhost:3002"
LINKEDIN_SERVICE_URL="http://localhost:3003"
AI_SERVICE_URL="http://localhost:3004"
ANALYTICS_SERVICE_URL="http://localhost:3005"
SCHEDULER_SERVICE_URL="http://localhost:3006"
AUTOMATION_SERVICE_URL="http://localhost:3007"
NOTIFICATION_SERVICE_URL="http://localhost:3008"

# Service Mesh Configuration
SERVICE_MESH_ENABLED=false
ISTIO_ENABLED=false

# =================================
# DEVELOPMENT TOOLS
# =================================

# Hot Reload
ENABLE_HOT_RELOAD=true
WATCH_FILES=true

# Development Debugging
INSPECT_ENABLED=false
INSPECT_PORT=9229

# Mock Services
MOCK_LINKEDIN_API=false
MOCK_EMAIL_SERVICE=false
MOCK_AI_SERVICE=false

# =================================
# TESTING CONFIGURATION
# =================================

# Test Database
TEST_DATABASE_URL="postgresql://inergize_user:your_password_here@localhost:5432/inergize_test"
TEST_REDIS_URL="redis://:your_redis_password@localhost:6379"

# Test Configuration
TEST_TIMEOUT=30000
TEST_COVERAGE_THRESHOLD=80