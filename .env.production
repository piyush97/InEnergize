# InErgize Production Environment Configuration
# This file contains production-specific configuration values
# WARNING: Never commit this file with real secrets to version control

# =================================
# DATABASE CONFIGURATION
# =================================
DATABASE_URL="${DATABASE_URL}"
ANALYTICS_DATABASE_URL="${ANALYTICS_DATABASE_URL}"
REDIS_URL="${REDIS_URL}"

# =================================
# AUTHENTICATION & SECURITY
# =================================
JWT_SECRET="${JWT_SECRET}"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"
NEXTAUTH_SECRET="${NEXTAUTH_SECRET}"
NEXTAUTH_URL="${NEXTAUTH_URL}"
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET="${SESSION_SECRET}"
SESSION_MAX_AGE=3600000

# =================================
# LINKEDIN API CONFIGURATION
# =================================
LINKEDIN_CLIENT_ID="${LINKEDIN_CLIENT_ID}"
LINKEDIN_CLIENT_SECRET="${LINKEDIN_CLIENT_SECRET}"
LINKEDIN_REDIRECT_URI="${NEXTAUTH_URL}/auth/linkedin/callback"
LINKEDIN_API_BASE_URL="https://api.linkedin.com/v2"
LINKEDIN_SCOPE="r_liteprofile,r_emailaddress,w_member_social"
LINKEDIN_RATE_LIMIT_REQUESTS_PER_HOUR=500
LINKEDIN_RATE_LIMIT_REQUESTS_PER_DAY=10000

# =================================
# AI SERVICES CONFIGURATION
# =================================
OPENAI_API_KEY="${OPENAI_API_KEY}"
OPENAI_MODEL="gpt-4"
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7
DALLE_API_KEY="${OPENAI_API_KEY}"
DALLE_MODEL="dall-e-3"
DALLE_SIZE="1024x1024"
DALLE_QUALITY="hd"

# =================================
# EMAIL SERVICES
# =================================
SENDGRID_API_KEY="${SENDGRID_API_KEY}"
SENDGRID_FROM_EMAIL="noreply@inergize.com"
SENDGRID_FROM_NAME="InErgize Platform"
EMAIL_VERIFICATION_TEMPLATE_ID="${EMAIL_VERIFICATION_TEMPLATE_ID}"
PASSWORD_RESET_TEMPLATE_ID="${PASSWORD_RESET_TEMPLATE_ID}"
WELCOME_EMAIL_TEMPLATE_ID="${WELCOME_EMAIL_TEMPLATE_ID}"

# =================================
# FILE STORAGE
# =================================
AWS_ACCESS_KEY_ID="${AWS_ACCESS_KEY_ID}"
AWS_SECRET_ACCESS_KEY="${AWS_SECRET_ACCESS_KEY}"
AWS_REGION="${AWS_REGION}"
AWS_S3_BUCKET="${AWS_S3_BUCKET}"
AWS_S3_PUBLIC_BUCKET="${AWS_S3_PUBLIC_BUCKET}"
AWS_CLOUDFRONT_DOMAIN="${AWS_CLOUDFRONT_DOMAIN}"

# =================================
# SEARCH & ANALYTICS
# =================================
ELASTICSEARCH_URL="${ELASTICSEARCH_URL}"
ELASTICSEARCH_INDEX_PREFIX="inergize_prod"
ELASTICSEARCH_USERNAME="${ELASTICSEARCH_USERNAME}"
ELASTICSEARCH_PASSWORD="${ELASTICSEARCH_PASSWORD}"
GOOGLE_ANALYTICS_ID="${GOOGLE_ANALYTICS_ID}"
MIXPANEL_TOKEN="${MIXPANEL_TOKEN}"

# =================================
# EXTERNAL SERVICES
# =================================
STRIPE_PUBLIC_KEY="${STRIPE_PUBLIC_KEY}"
STRIPE_SECRET_KEY="${STRIPE_SECRET_KEY}"
STRIPE_WEBHOOK_SECRET="${STRIPE_WEBHOOK_SECRET}"
STRIPE_SUCCESS_URL="${NEXTAUTH_URL}/payment/success"
STRIPE_CANCEL_URL="${NEXTAUTH_URL}/payment/cancel"
SLACK_WEBHOOK_URL="${SLACK_WEBHOOK_URL}"
SLACK_CHANNEL="#production-alerts"

# =================================
# MONITORING & OBSERVABILITY
# =================================
NEW_RELIC_LICENSE_KEY="${NEW_RELIC_LICENSE_KEY}"
SENTRY_DSN="${SENTRY_DSN}"
LOG_LEVEL="info"
LOG_FORMAT="json"
LOG_FILE_PATH="/var/log/inergize/app.log"
LOG_MAX_SIZE="50MB"
LOG_MAX_FILES=10
HEALTH_CHECK_TIMEOUT=3000
HEALTH_CHECK_INTERVAL=15000

# =================================
# API GATEWAY & SERVICE MESH
# =================================
KONG_ADMIN_URL="${KONG_ADMIN_URL}"
KONG_PROXY_URL="${KONG_PROXY_URL}"
CONSUL_URL="${CONSUL_URL}"
SERVICE_DISCOVERY_ENABLED=true

# =================================
# RATE LIMITING & SECURITY
# =================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=true
CORS_ORIGIN="${CORS_ORIGIN}"
CORS_CREDENTIALS=true
HELMET_ENABLED=true
CSP_ENABLED=true

# =================================
# CACHING
# =================================
CACHE_TTL_DEFAULT=3600
CACHE_TTL_AUTH=1800
CACHE_TTL_CONTENT=7200
CACHE_TTL_ANALYTICS=300

# =================================
# FEATURE FLAGS
# =================================
FEATURE_AI_CONTENT_GENERATION=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AUTOMATION_RULES=true
FEATURE_BULK_OPERATIONS=false
DEBUG_ENABLED=false
DEBUG_SQL_LOGGING=false
DEBUG_API_REQUESTS=false

# =================================
# APPLICATION CONFIGURATION
# =================================
NODE_ENV="production"
PORT="${PORT:-3000}"
HOST="0.0.0.0"
API_VERSION="v1"
API_PREFIX="/api"
API_TIMEOUT=30000
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
MAX_FILE_SIZE="10MB"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,video/mp4,application/pdf"

# =================================
# MICROSERVICES CONFIGURATION
# =================================
AUTH_SERVICE_URL="${AUTH_SERVICE_URL}"
USER_SERVICE_URL="${USER_SERVICE_URL}"
LINKEDIN_SERVICE_URL="${LINKEDIN_SERVICE_URL}"
AI_SERVICE_URL="${AI_SERVICE_URL}"
ANALYTICS_SERVICE_URL="${ANALYTICS_SERVICE_URL}"
SCHEDULER_SERVICE_URL="${SCHEDULER_SERVICE_URL}"
AUTOMATION_SERVICE_URL="${AUTOMATION_SERVICE_URL}"
NOTIFICATION_SERVICE_URL="${NOTIFICATION_SERVICE_URL}"
SERVICE_MESH_ENABLED=true
ISTIO_ENABLED=true

# =================================
# DEVELOPMENT TOOLS
# =================================
ENABLE_HOT_RELOAD=false
WATCH_FILES=false
INSPECT_ENABLED=false
INSPECT_PORT=9229
MOCK_LINKEDIN_API=false
MOCK_EMAIL_SERVICE=false
MOCK_AI_SERVICE=false

# =================================
# TESTING CONFIGURATION
# =================================
TEST_DATABASE_URL="${TEST_DATABASE_URL}"
TEST_REDIS_URL="${TEST_REDIS_URL}"
TEST_TIMEOUT=10000
TEST_COVERAGE_THRESHOLD=80