# Server Configuration
NODE_ENV=development
PORT=3006
SERVICE_NAME=analytics-service

# Database Configuration (TimescaleDB)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5432
TIMESCALE_USER=inergize_user
TIMESCALE_PASSWORD=your_password_here
TIMESCALE_DATABASE=inergize_analytics
TIMESCALE_MAX_CONNECTIONS=20
TIMESCALE_CONNECTION_TIMEOUT=60000

# Redis Configuration (Caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=analytics:

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1h

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Metrics Collection
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# WebSocket Configuration
WS_ENABLED=true
WS_PORT=3007
WS_HEARTBEAT_INTERVAL=30000

# Data Retention
DATA_RETENTION_DAYS=90
AGGREGATION_INTERVAL_MINUTES=5
CLEANUP_INTERVAL_HOURS=24

# External Services
LINKEDIN_SERVICE_URL=http://localhost:3004
USER_SERVICE_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3001