# Test Environment Variables
NODE_ENV=test

# Test Database
DATABASE_URL="postgresql://inergize_user:inergize_password@localhost:5432/inergize_test"
TEST_DATABASE_URL="postgresql://inergize_user:inergize_password@localhost:5432/inergize_test"

# Test Analytics Database
ANALYTICS_DATABASE_URL="postgresql://inergize_user:inergize_password@localhost:5433/inergize_analytics_test"

# Test Redis
REDIS_URL="redis://localhost:6379/1"
TEST_REDIS_URL="redis://localhost:6379/1"

# NextAuth Test Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="test-secret-for-testing-only-not-for-production"

# Test API Keys (mocked)
LINKEDIN_CLIENT_ID="test-linkedin-client-id"
LINKEDIN_CLIENT_SECRET="test-linkedin-client-secret"
OPENAI_API_KEY="test-openai-api-key"

# JWT Configuration for tests
JWT_SECRET="test-jwt-secret-for-testing-only"
JWT_EXPIRES_IN="1h"

# Bcrypt settings for faster tests
BCRYPT_SALT_ROUNDS="4"

# Service URLs for testing
AUTH_SERVICE_URL="http://localhost:3001"
USER_SERVICE_URL="http://localhost:3002"
WEB_APP_URL="http://localhost:3000"

# Test-specific settings
MOCK_LINKEDIN_API="true"
MOCK_EMAIL_SERVICE="true"
MOCK_AI_SERVICE="true"
MOCK_EXTERNAL_APIS="true"

# Logging configuration for tests
LOG_LEVEL="error"
LOG_SILENT="true"

# Rate limiting for tests (more permissive)
RATE_LIMIT_WINDOW_MS="60000"
RATE_LIMIT_MAX_REQUESTS="1000"

# Email service configuration (mocked in tests)
EMAIL_FROM="test@inergize.com"
EMAIL_PROVIDER="mock"

# File upload settings for tests
UPLOAD_MAX_SIZE="10485760"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,video/mp4"

# Analytics and monitoring (disabled in tests)
ANALYTICS_ENABLED="false"
MONITORING_ENABLED="false"
TELEMETRY_ENABLED="false"

# Test data settings
SEED_TEST_DATA="true"
CLEANUP_TEST_DATA="true"